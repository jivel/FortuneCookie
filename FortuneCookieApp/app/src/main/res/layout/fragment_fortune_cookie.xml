<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    android:id="@+id/linearLayoutFortuneCookie"
    android:padding="4dp"
    android:showDividers="end"
    android:focusableInTouchMode="false">



    <ImageView
        android:id="@+id/image_fortune_cookie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/fortune_cookie_type_4" />

    <!-- Used for the ripple effect on touch -->
    <LinearLayout
        android:id="@+id/container_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@android:color/background_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:padding="4dp">
            <TextView
                android:id="@+id/label_type"
                style="@style/LabelTitle"
                android:text="Mexican Cookie"/>
            <TextView
                android:id="@+id/label_description"
                style="@style/LabelContent"
                android:text="Frases Mexicanas"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>